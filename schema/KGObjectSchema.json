{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://hub.cyberexperimentation.org/KGObjectSchema.json",
  "type": "array",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": [],
  "examples": [
    [
      {
        "id": 1.0,
        "title": "tile name",
        "description": "description field"
      },
      {
        "id": 2.0,
        "title": "another tile name",
        "description": "another description field"
      }
    ]
  ],
  "additionalItems": true,
  "items": {
    "anyOf": [
      {
        "$id": "#/items/anyOf/0",
        "type": "object",
        "title": "Core artifact element",
        "description": "This is an individual record for the Knowledge Graph Object",
        "default": {},
        "examples": [
          {
            "id": 1.0,
            "title": "tile name",
            "description": "description field"
          }
        ],
        "required": ["id", "title", "description"],
        "additionalProperties": true,
        "properties": {
          "id": {
            "$id": "#/items/anyOf/0/properties/id",
            "type": "integer",
            "title": "The id schema",
            "description": "Unique artifact ID from the original source system",
            "default": 0.0,
            "examples": [1.0]
          },
          "title": {
            "$id": "#/items/anyOf/0/properties/title",
            "type": "string",
            "title": "The title schema",
            "description": "Artifact title from the original source system",
            "default": "",
            "examples": ["tile name"]
          },
          "description": {
            "$id": "#/items/anyOf/0/properties/description",
            "type": "string",
            "title": "The description schema",
            "description": "Artifact description from the original source system",
            "default": "",
            "examples": ["description field"]
          }
        }
      }
    ],
    "$id": "#/items"
  }
}
